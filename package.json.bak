{
  "name": "kori-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./apps/* run dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "predev": "pnpm -C packages/shared build",

    "dev:api": "tsx apps/api/src/server.ts",
    "test:api": "vitest run --dir apps/api --reporter=dot --coverage",
    "lint:openapi": "redocly lint apps/api/openapi.yaml"
  },
  "devDependencies": {
    "@redocly/cli": "^2.7.0",
    "@types/node": "^22.9.0",
    "tsx": "^4.19.1",
    "vitest": "^2.1.3",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.1.2"
  }
}
